# Glass API Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Backend Selection
# ============================================================================
# Options: openai, ollama
GLASS_BACKEND=openai

# ============================================================================
# OpenAI Configuration (if using GLASS_BACKEND=openai)
# ============================================================================
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Ollama Configuration (if using GLASS_BACKEND=ollama)
# ============================================================================
# Host where Ollama is running
# Use host.docker.internal if Ollama is on your host machine
# Use ollama:11434 if using the ollama Docker service
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=180.0

# ============================================================================
# Glass Settings
# ============================================================================
GLASS_TEMPERATURE=0.3
GLASS_SYMMETRY_THRESHOLD=0.6

# ============================================================================
# API Settings
# ============================================================================
API_PORT=8000
API_WORKERS=4

# ============================================================================
# Logging & Monitoring
# ============================================================================
LOG_LEVEL=INFO
METRICS_ENABLED=true
